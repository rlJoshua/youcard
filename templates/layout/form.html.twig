<title>YouCard - {{ title }}</title>

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div id="form" class="example-wrapper">
        <h1>{{ sub_title }}</h1>

        {{ form_start(form, { 'action': path(app.request.attributes.get("_route")), "method" : "POST", "enctype": "multipart/form-data"}) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}

        <br />
        <br />
        <br />
        <br />

        <h1>{{ title }}</h1>

        <ul>
            {% if cards is defined %}
                {% for card in cards %}
                    <li>{{ card.name }} | PV: {{ card.health }} - ATQ : {{ card.attack }} - Mana : {{ card.mana }} | Faction : {{ card.faction.name }}</li>
                {% endfor %}
            {% endif %}

            {% if factions is defined %}
                {% for faction in factions %}
                    <li>{{ faction.name }}</li>
                {% endfor %}
            {% endif %}

            {% if decks is defined %}
                {% for deck in decks %}
                    <li>{{ deck.name }}</li>
                {% endfor %}
            {% endif %}

        </ul>

    </div>

{% endblock %}
